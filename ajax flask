from flask import Flask,render_template,request 
app = Flask(__name__)

@app.route('/') 
def hello_world():
  return render_template("tn.html")


@app.route('/num',methods=['GET','POST']) 
def hello():
  name=request.form['fname']
  print (name)
  return name
if __name__=='__main__':
 app.run() 

